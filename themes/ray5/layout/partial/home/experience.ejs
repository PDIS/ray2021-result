<section id="experience">
  <div class="container">
    <h2 class="text-primary">
      <%- page.experience.title %>
    </h2>
    <div class="row">
      <%
        site.pages.filter(function(p){ return p.layout == "page" && p.lang == page.lang }).forEach(function(p){
          p.experience.items.forEach(function(value) {
      %>
        <div class="col-lg-6 exp-card">
          <div class="exp-card-text">
            <div class="avatar">
              <div class="circle-avatar mb-2">
                <div style="background:url('/image/<%- value.image %>')"></div>
              </div>
              <span>
                <%- value.name %>
              </span>
            </div>

            <div class="content">
              <a target="_blank" href="<%- value.link %>">
              <h3>
                <%- value.title %>
                  </h4>
                  <span>
                    <%- value.content %>
                  </span>
                  </a>
            </div>

          </div>
        </div>
      <%
          });
        }); 
      %>
    </div>
  </div>
</section>
<style>
  @media (min-width: 768px) and (max-width: 992px) {
    .nav-link {
      color: white !important;
    }
  }
  h2 {
    color: <%- page.cover.background %> !important;
  }


  #define-problem .circle {
    border-color: <%- page.cover.background %> !important;
  } 
</style>
<section id="cover" class="cover-2">
  <div class="cover-bg">
    <div
      class="cover-bg-color"
      style="border-bottom-color: <%- page.cover.background %>"
    ></div>
  </div>
  <div class="container h-100">
    <div class="row h-100">
      <div class="left col-lg-8 d-flex justify-content-center">
        <div class="macbook">
          <img src="/image/macbook.png" alt="macbook" />
          <div style="background: url('/image/<%- page.cover.image %>')"></div>
        </div>
      </div>
      <div class="right col-lg-4 d-flex align-items-center">
        <div
          class="card-text text-center"
          style="color: <%- page.cover.background %>"
        >
          <p class="fw-bold fs-4"><%- page.cover.department %></p>
          <h1 class="fw-bold mt-2"><%- page.cover.title %></h1>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="sec-cover">
  <div class="row">
    <div class="col-lg-6 demo <%- page.cover.demo.position == "right" ? "result-order-last" : "" %>">
      <div class="macbook">
          <% if(page.cover.demo.mobile.enable == true) { %>
            <div class="iphone-cover <%- page.cover.demo.mobile.position == "right" ? "iphone-right" : "" %>">
              <img src="/image/iphone.png" alt="iphone" class="w-100">
              <div
                class="screen"
                style="background: url('/image/<%- page.cover.demo.mobile.image %>')"
              ></div>
            </div>
          <% } %>
          <% if(page.cover.demo.background.border == "none") { %>
            <div class="background-none-image">
              <img src="/image/<%- page.cover.demo.background.image %>" class="w-100" />
            </div>
          <% } %>
          <img src="/image/macbook.png" alt="macbook" class="w-100 <%- page.cover.demo.background.border=="none"?"invisible ":"" %>" />
          <div
            class="screen <%- page.cover.demo.background.border=="none"?"invisible ":"" %>"
            style="background: url('/image/<%- page.cover.demo.background.image %>')"
          ></div>

      </div>
     
      <div class="text-center mt-4 d-none">
        <a
          href="<%- page.cover.link %>"
          class="btn btn-secondary px-4 rounded-pill mb-3"
          >看現行網頁</a
        >
      </div>
    </div>
    <div class="col-lg-6">
      <h1 class="fs-3 fw-bold" style="color: <%- page.cover.title_color %>"><%- page.title %></h1>
      <p class="fs-4 fw-bold"><%- page.cover.subtitle %></p>
      <div class="members mt-4">
        <% page.cover.members.forEach(function(value){ %>
        <div class="member me-4 border-0 text-center">
          <img
            src="/image/<%- value.image %>"
            alt="<%- value.name %>"
            class="rounded-circle"
          />
          <span><%- value.name %></span>
        </div>
        <% }) %>
      </div>
      <div class="description mt-4"><%- page.cover.description %></div>
    </div>
  </div>
</section>

<section id="cover" class="cover-2">
  <div class="cover-bg">
    <div
      class="cover-bg-color"
      style="border-bottom-color: <%- page.cover.background %>"
    ></div>
  </div>
  <div class="container h-100">
    <div class="row h-100">
      <div class="col-8 d-flex align-items-center justify-content-center">
        <div class="macbook">
          <img src="/image/macbook.png" alt="macbook" />
          <div style="background: url('/image/<%- page.cover.image %>')"></div>
        </div>
      </div>
      <div class="col-4 h-100 d-flex align-items-center justify-content-end">
        <div
          class="card-text text-center"
          style="color: <%- page.cover.background %>"
        >
          <p class="fw-bold fs-4"><%- page.cover.department %></p>
          <h1 class="fw-bold mt-2"><%- page.cover.title %></h1>
        </div>
      </div>
    </div>
  </div>
</section>

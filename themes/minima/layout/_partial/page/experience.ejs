<% if (typeof page.experience !="undefined" ) { %>
  <section id="experience">
    <div class="container">
      <h2 class="fw-bold">見習紀錄與心得分享</h2>
      <% page.experience.items.forEach(function(value){ %>
        <div class="row">
          <div class="col exp-card">
            <div class="exp-card-text">
              <div class="avatar">
                <div class="circle-avatar mb-2">
                  <div style="background:url('/image/<%- value.image %>')"></div>
                </div>
                <span>
                  <%- value.name %>
                </span>
              </div>

              <div class="content">
                <a target="_blank" href="<%- value.link %>">
                  <h3>
                    <%- value.title %>
                      </h4>
                      <p>
                        <%- value.content %>
                      </p>
                </a>
              </div>

            </div>
          </div>
        </div>
        <% }) %>
    </div>
    </div>
  </section>
  <% } %>